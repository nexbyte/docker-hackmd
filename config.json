{
  "test": {
    "docspath": "/dataserver",
    "db": {
      "dialect": "sqlite",
      "storage": ":memory:"
    }
  },
  "development": {
    "docspath": "/dataserver",
    "hsts": {
      "enable": false
    },
    "db": {
      "dialect": "sqlite",
      "storage": "./db.hackmd.sqlite"
    }
  },
  "production": {
    "domain": "hackmd.docker.nexbyte.ch",
    "docspath": "/dataserver",
    "hsts": {
      "enable": "true",
      "maxAgeSeconds": "31536000",
      "includeSubdomains": "true",
      "preload": "true"
    },
    "db": {
      "username": "",
      "password": "",
      "database": "hackmd",
      "host": "localhost",
      "port": "3306",
      "dialect": "mysql"
    }
  }
}